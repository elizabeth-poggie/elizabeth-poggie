generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/notes.db"
}

model Note {
  id            Int    @id @default(autoincrement())
  slug          String // slugs r special and built dynamically
  collection    String // e.g. John Abbott College
  category      String // e.g. Web 1
  subcategory   String? // e.g. Lecture
  title         String // e.g. Intro to Web Development
  created       String // e.g. 2025-01-04
  number        Int
  coverSrc      String?
  assetPath     String // e.g. where in /public the assets are located
}
